<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.IdealWeightActivity">

    <include
        android:id="@+id/toolbar_in"
        layout="@layout/toolbar"/>

    <TextView
        android:id="@+id/iw_label_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Peso Ideal"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/toolbar_in" />

    <TextView
        android:id="@+id/iw_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/iw_label_tv" />

    <TextView
        android:id="@+id/wd_label_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iw_tv"
        android:text="Peso - Peso ideal"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/wd_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/wd_label_tv"
        android:textSize="20sp"
        android:layout_margin="10dp" />

    <CheckBox
        android:id="@+id/log_cb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salvar log?"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toTopOf="@id/summary_bt"/>

    <Button
        android:id="@+id/finish_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Finalizar"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/summary_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Resumo"
        app:layout_constraintBottom_toTopOf="@id/finish_bt"/>


</androidx.constraintlayout.widget.ConstraintLayout>